
<div class="w3-sidebar w3-bar-block w3-card w3-animate-right @ActiveClass" style="width:@Width">
    <div class="modal-dialog modal-fit @ActiveClass">
        <div class="modal-content noBorder">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                @Footer
            </div>
        </div>
    </div>
</div>

<div class="overlay @ActiveClass"></div>

@code {
    [Parameter]
    public int WidthLevel { get; set; } = 0;

    [Parameter]
    public RenderFragment Title { get; set; } = null!;

    [Parameter]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    public RenderFragment Footer { get; set; } = null!;

    private bool Active { get; set; } = false;

    private string ActiveClass => Active ? "active" : string.Empty;

    private string Width => $"{(WidthLevel + 1) * 10}%";

    public void Open() => Active = true;

    public void Close() => Active = false;
}
